@import "../../../__wuBaseWxss__/1.wxss";

.title {
    font-size: 30rpx;
}

.title .iconfont {
    font-size: 40rpx;
    vertical-align: middle;
}

.header {
    position: relative;
}

.header-bg {
    position: absolute;
    background: #FBD40A;
    height: 150rpx;
    padding-top: 10rpx;
    z-index: 1;
    width: 100%;
}

.header-content {
    position: relative;
    z-index: 2;
    left: 0;
    top: 0;
    width: 100%;
}

.header-top {
    padding-left: 20rpx;
    display: flex;
    justify-content: flex-start;
}

.header .title {
    color: #fff;
}

.header .nearest {
    border-radius: 24rpx;
    font-size: 24rpx;
    height: 48rpx;
    line-height: 46rpx;
    background: #fff;
    color: #666;
    opacity: 0.6;
    padding: 0 18rpx;
    margin-left: 20rpx;
    margin-right: 30rpx;
}

.header .nearest .iconfont {
    position: relative;
    top: 2rpx;
    margin-right: 4rpx;
}

.header .input {
    margin: 20rpx 24rpx 24rpx 24rpx;
    background: #fff;
    border-radius: 10rpx;
    min-height: 100rpx;
    margin-top: 20rpx;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    z-index: 2;
}

.header .input .form {
    margin: 12rpx 30rpx 0 24rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 72rpx;
}

.header .input .form .dot {
    width: 16rpx;
    height: 16rpx;
    border-radius: 8rpx;
    display: inline-block;
    background: #ff9800;
}

.header .input .form .txt {
    font-size: 30rpx;
    padding-left: 20rpx;
    flex: 1;
    margin-right: 60rpx;
    height: 100%;
    line-height: 80rpx;
    color: #575757;
    box-sizing: border-box;
    display: inline-block;
}

.header .input .form .btn {
    background: #FBD40A;
    color: #fff;
    font-size: 32rpx;
    border-radius: 8rpx;
    height: 72rpx;
    line-height: 72rpx;
    padding: 0 30rpx;
    display: inline-block;
    margin-top: 10rpx;
}

.header .input swiper {
    flex: 1;
    margin-bottom: 12rpx;
}

.header .input swiper swiper-item {
    display: flex;
    width: 100%;
    flex-wrap: wrap;
    padding-bottom: 40rpx;
    box-sizing: border-box;
    justify-content: center;
}

.header .input swiper .item {
    background: #f0f0f0;
    color: #aaa;
    font-size: 24rpx;
    text-align: center;
    width: 22%;
    display: flex;
    flex-direction: column;
    margin: 12rpx 1% 4rpx 1%;
    height: 100rpx;
    justify-content: center;
    position: relative;
    padding: 5rpx 0;
}

.header .input swiper .item .hot {
    position: absolute;
    right: 8rpx;
    top: -8rpx;
    color: #fff;
    background: #de534b;
    font-size: 14rpx;
    padding: 2rpx 6rpx;
}

.header .input swiper .item .tag {
    position: absolute;
    right: -6rpx;
    top: -14rpx;
    color: #fff;
    background: #FBD40A;
    font-size: 18rpx;
    padding: 0 6rpx;
}

.header .input swiper .item .key {
    margin: 0 auto 6rpx auto;
    font-size: 30rpx;
    color: #444;
    width: 60rpx;
}

.header .input .swiper-bar {
    position: absolute;
    width: 100%;
    left: 0;
    bottom: 12rpx;
    display: flex;
    justify-content: center;
}

.header .input .swiper-bar view {
    width: 30rpx;
    height: 6rpx;
    background: #ddd;
    margin: 0 2rpx;
}

.header .input .swiper-bar view.actived {
    background: #FBD40A;
}

.banner {
    display: flex;
    width: 100%;
    position: absolute;
    left: 0;
    top: 160rpx;
    z-index: 1;
}

.banner .bg,.banner .bg image {
    width: 100%;
    height: 390rpx;
}

.banner swiper {
    height: 180rpx;
    width: 100%;
    margin-bottom: 10rpx;
}

.banner swiper swiper-item {
    position: relative;
}

.banner swiper navigator {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}

.banner swiper image {
    height: 100%;
    width: 100%;
}

.body {
    background: #fff;
}

.body-top .caption {
    padding: 0rpx 20rpx 10rpx 20rpx;
    line-height: 48rpx;
    display: flex;
}

.body-top .caption .title {
    color: #FBD40A;
}

.body-top .caption .desc {
    font-size: 24rpx;
    color: #aaa;
    text-indent: 20rpx;
    flex: 1;
}

.body-top .caption .more {
    font-size: 24rpx;
    color: #666;
    margin-right: 6rpx;
    margin-left: 6rpx;
    padding: 0 10rpx;
    border-radius: 10rpx;
}

.body-top .caption .more .iconfont {
    font-size: 22rpx;
    color: #aaa;
}

.body-top .best {
    display: flex;
    padding: 10rpx 0 10rpx 24rpx;
    margin-bottom: 14rpx;
}

.body-top .best .user {
    flex: 1;
    display: flex;
    justify-content: space-between;
    background: #f7f7f7;
    padding: 20rpx;
    border-radius: 10rpx;
    position: relative;
}

.body-top .best .golden {
    margin-right: 10rpx;
}

.body-top .best .user .medal {
    position: absolute;
    top: -4rpx;
    left: 0;
    font-size: 40rpx;
}

.body-top .best .golden .medal {
    color: #ffd700;
}

.body-top .best .silver .medal {
    color: #c0c0c0;
}

.body-top .best .user avatar {
    width: 60rpx;
    height: 60rpx;
    background: #ddd;
    margin-right: 10rpx;
    border-radius: 30rpx;
}

.body-top .best .user .profile {
    margin-right: 10rpx;
    width: 144rpx;
    font-size: 28rpx;
}

.body-top .best .user .profile .school {
    color: #aaa;
    font-size: 24rpx;
}

.body-top .best .user .income view {
    color: #ccc;
    font-size: 22rpx;
    text-align: center;
}

.body-top .best .user .income .money {
    color: #ff9800;
    font-size: 26rpx;
}

.body-top .best .arrow {
    color: #aaa;
    font-size: 22rpx;
    width: 46rpx;
    height: 108rpx;
    line-height: 108rpx;
    text-indent: 8rpx;
}

.body-list .item {
    display: flex;
    align-items: center;
    padding: 24rpx 0 24rpx 28rpx;
}

.body-list .item .left {
    flex: 1;
    margin-right: 20rpx;
}

.body-list .item .content {
    font-size: 32rpx;
    line-height: 44rpx;
}

.body-list .item .content .secret {
    position: static;
    background: #FBD40A;
    color: #fff;
    border-radius: 50%;
    line-height: 40rpx;
    width: 40rpx;
    height: 40rpx;
    display: inline-block;
    text-align: center;
    font-size: 28rpx;
    margin-right: 4rpx;
}

.body-list .item .type {
    color: #fff;
    background: #ddd;
    font-size: 24rpx;
    padding: 2rpx 10rpx;
    border-radius: 4rpx;
    margin-right: 10rpx;
}

.body-list .item .desc {
    font-size: 26rpx;
    color: #aaa;
    margin-top: 16rpx;
    line-height: 40rpx;
}

.body-list .item .time {
    font-size: 22rpx;
    color: #ccc;
    margin-right: 20rpx;
}

.body-list .item .right {
    padding-right: 30rpx;
}

.body-list .item .right view {
    font-size: 24rpx;
    color: #666;
    text-align: center;
}

.body-list .item .right .money {
    color: #ff9800;
    font-size: 30rpx;
}

.body-list .item .right button {
    background: #FBD40A;
    border-radius: 10rpx;
    height: 64rpx;
    line-height: 64rpx;
    width: 160rpx;
    font-size: 32rpx;
    margin-top: 10rpx;
    padding: 0;
}

.body-list .item .right button.disabled {
    background: #d0d0d0;
    color: #f7f7f7;
}

.body-list .item .right button.accepted {
    border: none;
    background: #f0f0f0;
    color: #888;
}

.body-list .item .right button.finished {
    border: none;
    background: none;
    color: #888;
}

.empty {
    display: flex;
    padding: 20rpx 0;
    width: 100%;
    height: 100%;
    align-items: center;
    justify-content: center;
    color: #aaa;
    background: #f7f7f7;
    font-size: 24rpx;
}

.empty .iconfont {
    font-size: 30rpx;
    margin-right: 10rpx;
}

.modal-switch-school view {
    font-size: 26rpx;
}

.modal-switch-school image {
    width: 100%;
    height: auto;
    margin-bottom: 10rpx;
}

.modal-switch-school .school {
    color: #FBD40A;
    padding: 20rpx 0 10rpx 0;
    font-size: 32rpx;
}

.dialog-ad {
    position: relative;
}

.dialog-ad image {
    width: 100%;
    height: 100%;
}

.dialog-ad .disappear {
    position: absolute;
    top: 0;
    right: 0;
    padding: 8rpx;
    opacity: 0.6;
    font-size: 24rpx;
    color: #444;
    line-height: 26rpx;
}

.dialog-ad .disappear .iconfont {
    margin-right: 6rpx;
    font-size: 26rpx;
    color: #444;
}

.dialog-coupon {
    width: 594rpx;
    height: 652rpx;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.dialog-coupon image {
    position: absolute;
    z-index: 2;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
}

.dialog-coupon .title,.dialog-coupon .content,.dialog-coupon navigator {
    position: relative;
    z-index: 3;
}

.dialog-coupon .title {
    font-size: 50rpx;
    font-weight: 700;
    color: #fee63c;
    margin-top: 24rpx;
}

.dialog-coupon .content {
    display: flex;
    margin-top: 210rpx;
    height: 188rpx;
    width: 360rpx;
    text-align: center;
}

.dialog-coupon .content .left {
    width: 64rpx;
    height: 76rpx;
    color: #a32900;
    font-size: 30rpx;
    opacity: 0.8;
    line-height: 40rpx;
    margin-top: 56rpx;
    border-right: 1rpx solid #e4b72a;
    padding: 0 30rpx;
}

.dialog-coupon .content .money {
    flex: 1;
    line-height: 188rpx;
    font-size: 80rpx;
    color: #a32900;
    font-weight: 700;
}

.dialog-coupon navigator {
    background: #fff;
    line-height: 90rpx;
    border-radius: 20rpx;
    margin-top: 32rpx;
    padding: 0 60rpx;
    font-size: 36rpx;
    font-weight: 700;
    color: #de3121;
}

.overlay {
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    top: 0;
    background: rgba(0,0,0,0.4);
    z-index: 20;
}

.overlay .notice {
    margin: 164rpx 40rpx 0 40rpx;
    color: #fff;
    text-align: center;
}

.overlay .info {
    border: 2rpx dashed #ff9800;
    height: 230rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.overlay .info view {
    font-size: 36rpx;
    margin-bottom: 30rpx;
}

.overlay .info text {
    font-size: 26rpx;
    background: #666;
    padding: 2rpx 10rpx;
    border-radius: 16rpx;
}

.overlay button {
    border: 1rpx solid #fff;
    display: inline-block;
    border-radius: 8rpx;
    background: rgba(255,255,255,0.1);
    color: #fff;
    padding: 0 72rpx;
    margin-top: 200rpx;
}